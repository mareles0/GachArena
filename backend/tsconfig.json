{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "allowJs": true
  },
  "include": [
    "server.ts",
    "middleware/**/*.ts",
    "routes/**/*.ts",
    "routes/**/*.js"
  ]
}
